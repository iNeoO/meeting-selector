{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,

    "types": ["vitest/globals", "@testing-library/jest-dom", "vite/client", "node"]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.vue",
    "setupTests.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
