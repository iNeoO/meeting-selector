{
  "name": "react-meeting-selector",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "main": "dist/react-meeting-selector.umd.js",
  "module": "dist/react-meeting-selector.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-meeting-selector.es.js",
      "require": "./dist/react-meeting-selector.umd.js"
    },
    "./style.css": {
      "default": "./dist/main.css"
    }
  },
  "scripts": {
    "dev": "run-s build dev:watch",
    "dev:watch": "chokidar 'src/**/*' -c 'pnpm build'",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "common-meeting-selector": "workspace:*",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "catalog:",
    "chokidar-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all2": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "catalog:"
  }
}
